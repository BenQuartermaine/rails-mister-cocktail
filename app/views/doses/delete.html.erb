
<%= simple_form_for [@cocktail, @dose] do |f| %>
<%= f.input :description %>
<%= f.association :ingredient %>
<%= f.submit "Add Dose", class: "btn btn-primary" %>
<%= link_to "Back", cocktail_path(@cocktail) class: "btn btn-danger btn-lg" %>
<% end %>

<!-- Footer -->
<%= render 'cocktails/footer', coccktail: @cocktail %>